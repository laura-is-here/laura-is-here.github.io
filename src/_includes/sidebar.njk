<div id="contact" class="measure--sm bg-main card padding--lg">
  <h2 class="h1">Contact Me</h2>
  <p>Fill out the form below to get in touch with me</p>
  <form action="https://formspree.io/xdoolldp" method="POST">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      id="name"
      name="name"
      placeholder="your name"
      required
      class="form-control"
      ,
    />
    <label for="_replyto" class="form-label">Email</label>
    <input
      type="email"
      id="_replyto"
      name="_replyto"
      placeholder="your email"
      required
      class="form-control"
    />
    <label for="message" class="form-label">Message</label>
    <textarea
      id="message"
      name="message"
      placeholder="your message"
      rows="6"
      required
      class="form-control"
    ></textarea>
    <input type="submit" value="Send Message" class="form-control" />
  </form>
</div>
